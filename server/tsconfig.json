{
    "include": ["**/*.ts", "**/*.tsx", "src/**/*.ts",  "src/**/*.js", "typings"],
    "exclude": [
        "node_modules",
    ],
    "compilerOptions": {
        "baseUrl": "src/",
        "paths": {
            "config/*": ["config/*"],
            "enums/*": ["enums/*"],
            "interfaces/*": ["interfaces/*"],
            "middlewares/*": ["middlewares/*"],
            "migrations/*": ["migrations/*"],
            "models/*": ["models/*"],
            "routes/*": ["routes/*"],
            "types/*": ["types/*"],
            "utils/*": ["utils/*"],
        },
        "outDir": "./build",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "allowJs": true,
        "checkJs": false,
        "declaration": false,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "noEmitHelpers": true,
        "types": [ "node"],
        "target": "es6",
        "lib": ["dom", "esnext"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "strict": true,
        "pretty": true,
        "removeComments": true,
        "strictNullChecks": false,
        "sourceMap": true,
        "resolveJsonModule": true
    }
}
